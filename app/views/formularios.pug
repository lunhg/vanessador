section.centralize-area(ng-controller="TypeformCtrl")
  div
    br
    br
    br
    h2 Inspecione um formulário
    br
    br
    br

    form.navbar-form(ng-show="forms === null")
      div.form-group
        p Nenhum curso encontrado. Registre um novo formulário typeform clicando no botão abaixo
        a.btn.btn-default(href="/#!/formularios/novo") Registrar

    img(src="/assets/images/loading.gif" ng-show="typeforms === null && onLoading")
    table.table.table-striped.table-hover(ng-show="typeforms !== null && !onLoading")
      thead
        tr
          th uuid
          th Nome
          th Tags
          th Proprietários
          th Ações
      tbody
        tr(ng-repeat="(k,v) in typeforms") 
          td 
            a(href="https://{{ v.base_url }}/{{ k }}") {{ k }}
          td {{ v.name }}
          td
            p(ng-repeat="(i, e) in v.tags")
              a(href="/#!/formularios/tags/{{ e }}") {{ v.tags.join(", ") }}
          td 
            a(href="/#!/users/{{ v.owner }}/profile") {{ v.owner }}
          td
            a.btn.btn-default(href="/#!/formularios/{{ k }}/stats") Estatisticas
            a.btn.btn-default(href="/#!/formularios/{{ k }}/questions") Questões 
            a.btn.btn-default(href="/#!/formularios/{{ k }}/responses") Respostas
            a.btn.btn-default(ng-click="onUpdate(k)") Atualizar
            a.btn.btn-default(href="/#!/formularios/{{ k }}/delete") Delete

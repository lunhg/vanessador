extends layout


block nav
  nav.navbar.navbar-default.navbar-fixed-top.container-fluid(roles="navigation")
    div.container(ng-controller="AuthCtrl")
      div.navbar-header
        a.navbar-brand(href="#" ng-show="user === null") Vanessador
        a.navbar-brand(href="#" ng-show="user") {{ user.displayName }}
          
      div.navbar-collapse.collapse#navbar-main
        ul.nav.navbar-nav.navbar-right
          li.dropdown(ng-show="user === null" ng-click="onDropmenu()" id="menu")
            a.dropdown-toogle(data-toogle="dropdown" href="#" id="login" aria-expanded="true") Login
              span.caret
            ul.dropdown-menu(aria-labelledby="login")
              - var a = ["Google"]
              - for(var federation in a)
                li 
                  a(ng-click="login"+a[federation]+"()")= a[federation]
                    img(width="32" heigth="32" ng-src="{{ icon"+a[federation]+" }}")
              
           
          li.dropdown.open(ng-show="user")
            a.btn.btn-default(ng-click="logout()") Logout

block content
  div.container(ng-controller="AuthCtrl")
    div#banner.page-header
      div.row
        div.col-lg-8.col-md-7.col-sm-6 ITS
          br
          h1 ITS
          br
          p.lead servi√ßos sociais
    div.bs-component(ng-show="user")
      blockquote
        p Email {{ user.email }}


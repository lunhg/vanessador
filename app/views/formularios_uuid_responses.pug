section.centralize-area
  br
  br
  br
  h1 Respostas do formulário {{ currentForm }}
  br
  br
  br
  a.btn.btn-default(href="/#!/formularios/{{ currentForm }}/stats") Ver estatísticas
  a.btn.btn-default(href="/#!/formularios/{{ currentForm }}/questions") Ver questões
  table.table.table-striped.table-hover
    thead
      tr
        th Token
        th Completado
        th Horário de início
        th Horário de submissão
        th Navegador
    tbody
      tr(ng-repeat="(i,e) in responses")
        td {{ e.token }}
        td {{ e.completed }} 
        td {{ e.metadata.date_land }}
        td {{ e.metadata.date_submit }}
        td {{ e.metadata.user_agent }}
        td
          a(href="/#!/formularios/{{ currentForm }}/responses/{{ e.token }}") Respostas


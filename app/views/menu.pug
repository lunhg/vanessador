nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
  div.container
    div.navbar-header
      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navCollapse")
        img(width="24" height="24" src="/assets/images/vanessadora.png")
    
    div.collapse.navbar-collapse.navbar-left
      ul.nav.navbar-nav
        li
          a.nav-link(href="/#!/") Vanessador

    div#navCollapse.collapse.navbar-collapse.navbar-right
      ul.nav.navbar-nav(ng-show="user === null")   
        li
          a.nav-link.active(href="https://www.github.com/lunhg/vanessador") Contribua
        li
          a.nav-link(href="/#!/login" ng-show="user == null") Login
        li(ng-show="user === null")
          a.nav-link(href="/#!/signup" ng-show="user == null") Cadastre-se
      
      ul.nav.navbar-nav(ng-show="user != null")
        // https://stackoverflow.com/questions/27837220/ie10-ng-repeat-mousedown-mouseenter#27841532
        li#boletos-menu(ng-show="user !== null" ng-,mouseenter="onDropdownmenu('boletos-menu', $event)" ng-mouseleave="onDropupmenu('boletos-menu', $event)")
          a(href="/#!/boletos") Boletos 
          
        li#formularios-menu(ng-show="user !== null" ng-mouseenter="onDropdownmenu('formularios-menu', $event)" ng-mouseleave="onDropupmenu('formularios-menu', $event)")
          a.btn-btn-default.dropdown-toogle(data-toogle="dropdown" aria-expanded="true") Formulários
            span.caret
          ul.dropdown-menu(aria-labelledby="formularios-menu")
            li
              a(href="/#!/formularios/novo") Novo formulário 
            li
              a(href="/#!/formularios") Ver seus formulários

        li#user-menu(ng-mouseenter="onDropdownmenu('user-menu', $event)" ng-mouseleave="onDropupmenu('user-menu', $event)")
          a.btn-btn-default.dropdown-toogle(data-toogle="dropdown" href="#" aria-expanded="true") {{ user.displayName || user.email }}
            img.img-responsive.img-circle.navbar-right(width="32" heigth="32" ng-show="user.photoUrl !== null" ng-src="{{ user.photoURL }}")
            span.caret
  
          ul.dropdown-menu(aria-labelledby="user-menu")
            li
              a(href="/#!/conta") Conta
            li
              a(ng-click="logout()") Logout




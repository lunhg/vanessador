section.centralize-area(ng-controller="PaypalCtrl")
  div
    br
    br
    br
    h2 Inspecione o boleto {{ currentInvoice }}
    br
    br
    br
    table.table.table-striped.table-hover
      thead
        tr
          th Payment ID
          th Status
          th Ações
      tbody
        tr(ng-repeat="(e) in registeredInvoice") 
          td {{ e.payment_id }}
          td {{ e.status }}
          td
            a.btn.btn-default(ng-show="e.status === 'DRAFT'" ng-click="send('{{ e.payment_id }}')") Enviar email de notificação
            a.btn.btn-default(ng-show="e.status === 'SENT'" ng-click="remind('{{ e.payment_id }}')") Reenviar email de notificação
            a.btn.btn-default(ng-show="e.status === 'SENT'" ng-click="cancel('{{ e.payment_id }}')") Cancelar pagamento
            p(ng-show="e.status === 'CANCELLED'") Boleto cancelado
            
            

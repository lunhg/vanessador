section.centralize-area(ng-show="user === null")
  br
  br
  br
  br
  h1 Login
  br
  br
  br
  br
  form
    fieldset 
    - var form = {'input_login_email':{'type':'text', 'placeholder':'email@itsrio.org'}, 'input_login_password':{'type':'password', 'placeholder': 'senha'}}
    - for(var key in form)
      - var val = form[key]
      div.form-group
        label.control-label(for=""+key)
          div 
            input.form-control(type=""+val.type id=""+key placeholder=""+val.placeholder)
    button.btn.btn-default(type="submit" ng-click="loginEmailAndPassword()") Login 
    br
    br
    div.section-divider
      a(href="#!/signup" ng-show="user == null") Cadastre-se
      br
      a(href="#!/resetPassword" ng-show="user == null") Esqueceu sua senha?
    br
    br
    div.section-divider
      hr.navbar-left
      span Ou
      hr.navbar-right

    div.container  
      a#input_login_google.btn.btn-default(ng-click="loginGoogle()") Entrar com sua conta google
        img(style="width:2.5%; height: 2.5%" src="https://cdn.worldvectorlogo.com/logos/google-icon.svg")

    

    

div.jumbotron(v-if='$parent.autorizado' style='background:transparent !important')
  br
  br
  br
  h2 Boletos
  br
  br
  div.container
    accordion(type="warning")
      panel(header='Novo Boleto')
        form
          fieldset
            div.form-group(v-for="(v,k) in modelos.boletos")
              label.control-label(:for="k") {{ v.label }}
              br
              div
                input.form-control.input-sm(:type="v.type" :id="k" :placeholder="v.placeholder")
        button.btn.btn-success.input.sm(v-on:click="onBoletos") Adicionar boleto
  
    accordion(type="success")
      panel(header="Importart Excel") 
        form
          fieldset
            div.form-group(v-for="(v,k) in modelos.xls.boletos")
              label.control-label(:for="k") {{ v.label }}
              br
              div
                input.form-control(:type="v.type" :id="k" :placeholder="v.placeholder")
        input(type="file" :name='boletos' v-on:change='importarXLS')

  div.container
    br
    br
    h2 Lista de Boletos
    br
    br
    div(v-for="(v,k) in boletos" :data="v" :key="k" :header="v")
      accordion(type="info" :one-at-time='true')  
        panel(:header="v")
          accordion(type="warning" :one-at-time='true')
            panel(header="Boleto")    
              div(v-for='(r,q) in boletos[v]')
                accordion(type="success" :one-at-time='true')
                  panel(:header="q")

